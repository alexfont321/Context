@model Context.Models.UserBook

@{
    ViewData["Title"] = "Details";
}

<h2>
    @Html.DisplayFor(model => model.Book.Title)
</h2>

<div>
    <h4> @Html.DisplayFor(model => model.Book.AuthorFirstName) @Html.DisplayFor(model => model.Book.AuthorLastName)</h4>
    <hr />
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s3"><a href="#author">Author</a></li>
                <li class="tab col s3"><a href="#book">Book</a></li>
                <li class="tab col s3"><a href="#context">Context</a></li>
                <li class="tab col s3"><a href="#comments">Comments</a></li>
            </ul>
        </div>
    </div>

    <div class="row" id="author">
        <div class="col s12">
            <h4 class="right-align">The Author</h4>
            <p>@Html.DisplayFor(model => model.Book.AuthorInfo)</p>
        </div>
    </div>
    <hr />
    <div class="row" id="book">
        <div class="col s12">
            <h4 class="left-align">The Book</h4>
            <p>@Html.DisplayFor(model => model.Book.BookInfo)</p>
        </div>
    </div>
    <hr />
    <div class="row" id="context">
        <div class="col s12">
            <h4 class="center-align">The Context</h4>
            <p>@Html.DisplayFor(model => model.Book.HistoricalInfo)</p>
        </div>
    </div>
    <hr />
    <div class="row" id="comments">
        <div class="col s4">
            <h5 class="left-align">Comments | <a asp-action="Edit" asp-route-id="@Model.UserBookId">Edit</a></h5>
     
        </div>
        <div class="col s8">
            <p>
                @Html.DisplayFor(model => model.Comments)
            </p>
        </div>
    </div>
    <dl class="dl-horizontal">
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
